<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackemory.studywaves">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.WelcomePage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.ListOfTest"
            android:label="@string/title_activity_list_of_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.TestTrialsPage"
            android:label="@string/title_activity_test_trials_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.RecordingPage"
            android:label="@string/title_activity_recording_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.AddTestPage"
            android:label="@string/title_activity_add_test_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>