<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hackemory.studywaves.controller.TestTrialsPage"
    tools:showIn="@layout/activity_test_trials_page">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:background="@color/blue"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="447dp"
        android:onClick="recordingPage"
        android:layout_marginStart="55dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/trial_list"
        android:layout_alignStart="@+id/trial_list" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:srcCompat="@android:drawable/ic_delete"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="41dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:text="Test name:"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="30dp"
        android:textSize="23sp"
        android:typeface="serif"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/trial_list" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:text="Name:"
        android:typeface="serif"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="31dp"
        android:textSize="23sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/trial_list" />

    <ListView
        android:id="@+id/trial_list"
        android:layout_width="281dp"
        android:layout_height="321dp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="95dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
